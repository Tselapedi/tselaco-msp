# -----------------------------------------------------------------------------
# App
# -----------------------------------------------------------------------------
BASEPATH=
NEXT_PUBLIC_APP_URL=http://localhost:3000${BASEPATH}
NEXT_PUBLIC_APP_NAME="RideConnect SA"

# -----------------------------------------------------------------------------
# Authentication (AWS Cognito)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_AWS_REGION=af-south-1
NEXT_PUBLIC_AWS_COGNITO_USER_POOL_ID=
NEXT_PUBLIC_AWS_COGNITO_CLIENT_ID=

# -----------------------------------------------------------------------------
# Storage (AWS S3)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_AWS_S3_BUCKET_NAME=
AWS_S3_ACCESS_KEY_ID=
AWS_S3_SECRET_ACCESS_KEY=

# -----------------------------------------------------------------------------
# Notifications (AWS SNS)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_AWS_SNS_PLATFORM_APPLICATION_ARN=
AWS_SNS_ACCESS_KEY_ID=
AWS_SNS_SECRET_ACCESS_KEY=

# -----------------------------------------------------------------------------
# Location Services (AWS Location)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_AWS_LOCATION_PLACE_INDEX=
NEXT_PUBLIC_AWS_LOCATION_TRACKER_NAME=
NEXT_PUBLIC_AWS_LOCATION_MAP_NAME=
AWS_LOCATION_ACCESS_KEY_ID=
AWS_LOCATION_SECRET_ACCESS_KEY=

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://user:password@localhost:5432/rideconnect_sa"

# -----------------------------------------------------------------------------
# API
# -----------------------------------------------------------------------------
API_URL=http://localhost:3000${BASEPATH}/api
NEXT_PUBLIC_API_URL=${API_URL}

# -----------------------------------------------------------------------------
# Email (AWS SES)
# -----------------------------------------------------------------------------
AWS_SES_ACCESS_KEY_ID=
AWS_SES_SECRET_ACCESS_KEY=
AWS_SES_REGION=af-south-1
AWS_SES_FROM_EMAIL=

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_DRIVER_REGISTRATION=false
ENABLE_PASSENGER_REGISTRATION=true

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
JWT_SECRET=
ENCRYPTION_KEY=

# -----------------------------------------------------------------------------
# Monitoring and Logging
# -----------------------------------------------------------------------------
SENTRY_DSN=
LOG_LEVEL=info
